if (articles && articles.length > 0)
  section.main-page__list.preview
    h2.visually-hidden Список превью статей
    ul.preview__list
      each article in articles
        li.preview__item
          ul.preview__breadcrumbs
            each category in article.categories
              li.preview__breadcrumbs-item
                a.preview__breadcrumbs-link(href=`/articles/category/${article.id}`) #{category.name}
          .preview__background
            img.preview__background-image(src=`/img/${article.photo || 'skyscraper@1x.jpg'}` style="width: 460px; height: 240px" srcset=`${article.photo ? `/img/${article.photo} 1x` : '/img/skyscraper@1x.jpg 1x, /img/skyscraper@2x.jpg 2x'}` alt=(article.title))
          time.preview__time(datetime='#{article.createdDate}') #{article.createdDate}
          h3.preview__name
            a.preview__name-link(href=`/articles/${article.id}`) #{article.title}
          p.preview__text #{article.announce}
          a.preview__comment(href='#')
            | Комментарии
            span.preview__cloud
            b.preview__comment-count #{article.comments.length}
else
  .main-page__empty-wrapper
    p.main-page__empty-text Здесь пока пусто!
